<p id="notice"><%= notice %></p>

<h1>Listing Hikes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Distance</th>
      <th>Difficulty</th>
      <th>Region</th>
      <th>Description</th>
      <th>Image</th>
      <th>Link</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hikes.each do |hike| %>
      <tr>
        <td><%= hike.title %></td>
        <td><%= hike.distance %></td>
        <td><%= hike.difficulty %></td>
        <td><%= hike.region %></td>
        <td><%= hike.description %></td>
        <td><%= hike.image %></td>
        <td><%= hike.link %></td>
        <td><%= hike.completed %></td>
        <td><%= link_to 'Show', hike %></td>
        <td><%= link_to 'Edit', edit_hike_path(hike) %></td>
        <td><%= link_to 'Destroy', hike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

